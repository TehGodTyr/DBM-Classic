  - DBM-Core/Libs/LibDeflate/changelog.md
  - DBM-Core/Libs/LibStub/tests
  - DBM-Core/Libs/LibDataBroker-1.1/README.textile

enable-nolib-creation: no

move-folders:
  DBM-Core/DBM-DefaultSkin: DBM-DefaultSkin
  DBM-Core/DBM-GUI: DBM-GUI
  DBM-Core/DBM-StatusBarTimers: DBM-StatusBarTimers
  DBM-Core/DBM-Core: DBM-Core
  DBM-Core/DBM-Party-Classic: DBM-Party-Classic
  DBM-Core/DBM-AQ20: DBM-AQ20
  DBM-Core/DBM-AQ40: DBM-AQ40
  DBM-Core/DBM-Azeroth: DBM-Azeroth
