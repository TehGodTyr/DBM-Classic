  DBM-Core/Libs/LibDeflate:
    url: https://github.com/SafeteeWoW/LibDeflate
    tag: latest
  DBM-Core/Libs/LibSerialize:
    url: https://github.com/rossnichols/LibSerialize
    tag: latest

ignore:
  - DBM-Core/!SortList.txt
  - DBM-Core/Boss Mods.luadoc
